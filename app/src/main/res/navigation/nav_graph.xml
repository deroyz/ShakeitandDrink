<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/drinksFragment">

    <fragment
        android:id="@+id/drinksFragment"
        android:name="com.example.android.mycocktailtesting.ui.drinks.DrinksFragment"
        android:label="DrinksFragment"
        tools:layout="@layout/fragment_drinks" >
        <action
            android:id="@+id/action_showDrinkDetail"
            app:destination="@id/detailFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.android.mycocktailtesting.ui.detail.DetailFragment"
        android:label="DetailFragment"
        tools:layout="@layout/fragment_detail" >
        <argument android:name="selectedDrink"
            app:argType="com.example.android.mycocktailtesting.data.domain.Drink" />
        <action
            android:id="@+id/action_detailFragment_to_addLogFragment"
            app:destination="@id/addLogFragment" />
    </fragment>

    <fragment
        android:id="@+id/logsFragment"
        android:name="com.example.android.mycocktailtesting.ui.logs.LogsFragment"
        android:label="MyLogFragment"
        tools:layout="@layout/fragment_logs">
        <action
            android:id="@+id/action_showLogDetail"
            app:destination="@id/addLogFragment" />
    </fragment>

    <fragment
        android:id="@+id/inventoryFragment"
        android:name="com.example.android.mycocktailtesting.ui.inventory.InventoryFragment"
        android:label="InventoryFragment"
        tools:layout="@layout/fragment_inventory" />

    <fragment
        android:id="@+id/ingredientsFragment"
        android:name="com.example.android.mycocktailtesting.ui.ingredients.IngredientsFragment"
        android:label="IngredientsFragment"
        tools:layout="@layout/fragment_ingredients"/>

    <fragment
        android:id="@+id/addLogFragment"
        android:name="com.example.android.mycocktailtesting.ui.addlog.AddLogFragment"
        android:label="AddLogFragment"
        tools:layout="@layout/fragment_add_log">
        <argument android:name="selectedLogId"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>


</navigation>